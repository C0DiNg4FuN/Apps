<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView  android:id="@+id/row_food_item_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/mouse"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/green">

        <TextView android:id="@+id/row_food_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:background="@color/white_opacity_20"
            android:textSize="22sp"
            android:textColor="@color/white_opacity_100"
            android:fontFamily="sans-serif"
            android:textStyle="bold|italic"
            android:text="TEST"/>

        <TextView android:id="@+id/row_food_item_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="6dp"
            android:textSize="18sp"
            android:textColor="@color/white_opacity_75"
            android:fontFamily="sans-serif"
            android:textStyle="italic"
            android:text="TEST"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white_opacity_75"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/white_opacity_75"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="18dp">
            
            <ImageView android:id="@+id/row_food_item_edit"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/edit"
                android:layout_margin="6dp"/>

            <ImageView android:id="@+id/row_food_item_delete"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/delete"
                android:layout_margin="6dp"/>
            
        </LinearLayout>

    </LinearLayout>

</LinearLayout>