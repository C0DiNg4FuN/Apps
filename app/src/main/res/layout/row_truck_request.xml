<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/white_opacity_100"
    android:id="@+id/row_truck_request">

    <View android:id="@+id/row_truck_request_side_view"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="@color/blue_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <TextView android:id="@+id/row_truck_request_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-5-1"
                android:textColor="#333333"
                android:textStyle="bold"/>

            <TextView android:id="@+id/row_truck_request_in_bulk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IN BULK"
                android:textColor="#333333"
                android:textStyle="bold"
                android:background="@drawable/background_in_bulk_button"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <ProgressBar android:id="@+id/row_truck_request_loading"
                android:layout_width="22dp"
                android:layout_height="22dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#bbbbbb"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView android:id="@+id/row_truck_request_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FROM: "
                    android:textColor="#333333"
                    android:textStyle="bold"/>

                <TextView android:id="@+id/row_truck_request_from2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beirut"
                    android:textColor="#666666"
                    android:lines="1"
                    android:ellipsize="end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView android:id="@+id/row_truck_request_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TO: "
                    android:textColor="#333333"
                    android:textStyle="bold"/>

                <TextView android:id="@+id/row_truck_request_to2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tripoli"
                    android:textColor="#666666"
                    android:lines="1"
                    android:ellipsize="end"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#bbbbbb"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/row_truck_request_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="?android:attr/ratingBarStyleSmall"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="4"/>

            <TextView android:id="@+id/row_truck_request_shipping_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/row_truck_request_rating"
                android:layout_toStartOf="@id/row_truck_request_rating"
                android:layout_alignParentStart="true"
                android:text="Shipping Company 1klsgsdlmgsl"
                android:textColor="#333333"
                android:textStyle="bold"
                android:lines="1"
                android:ellipsize="end"/>
            <!-- layout_toLeftOf="@id/row_truck_request_rating" to ellipsize -->

            <TextView android:id="@+id/row_truck_request_view_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:text="VIEW"
                android:textColor="#666666"
                android:textStyle="bold"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>