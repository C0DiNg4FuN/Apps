<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="#66c69c6d">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/smart_low">
    
        <EditText android:id="@+id/add_edit_food_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="text"
            android:hint="Food Item Name"
            android:textColorHint="@color/green_transparent"
            android:textColor="@color/green"
            android:textSize="15sp"
            android:background="@color/white_opacity_40"
            android:padding="12dp"
            android:layout_marginTop="22dp"/>

            <EditText android:id="@+id/add_edit_food_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Description"
                android:textColorHint="@color/green_transparent"
                android:textColor="@color/green"
                android:textSize="15sp"
                android:background="@color/white_opacity_40"
                android:padding="12dp"
                android:layout_marginTop="22dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginTop="22dp"
                android:background="@color/white_opacity_40"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic|bold"
                    android:textColor="@color/green"
                    android:text="CATEGORY"/>

                <com.aigestudio.wheelpicker.WheelPicker
                    android:id="@+id/add_edit_food_item_wheel_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout android:id="@+id/add_edit_food_item_add_ingredients_LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:background="@color/white_opacity_40"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic|bold"
                    android:textColor="@color/green"
                    android:text="INGREDIENTS"/>

            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/add_edit_food_item_add_ingredient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add"
                android:layout_marginTop="22dp"/>

        </LinearLayout>

    </ScrollView>
    
</LinearLayout>